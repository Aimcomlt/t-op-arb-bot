{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"],
    "types": ["node"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/*"],
      "@blazing/core/*": ["../packages/core/src/*"],
      "@types/*": ["../packages/types/src/*"]
    },
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../packages/core" }
  ]
}

